
#---[ Library configuration ]------------------------------------------------------------

PACKAGE_NAME=@PACKAGE_NAME@
LIBRARY_NAME="netw"
SONAME=@SONAME@

LIBRARY_SOURCES= \
	$(wildcard src/library/*.cc) \
	$(wildcard src/library/ip/*.cc) \
	$(wildcard src/library/os/@OSNAME@/*.cc) \
	$(wildcard src/library/icmp/*.cc) \
	$(wildcard src/library/dns/*.cc) \
	$(wildcard src/library/dns/@OSNAME@/*.cc) \
	$(wildcard src/library/nic/*.cc)

MODULE_SOURCES= \
	$(wildcard src/module/*.cc) \
	$(wildcard src/tools/*.cc) \
	$(wildcard src/module/agents/host/*.cc) \
	$(wildcard src/module/agents/nic/*.cc)

TEST_SOURCES= \
	$(wildcard src/testprogram/*.cc)

#---[ Tools ]----------------------------------------------------------------------------

CXX=@CXX@
LD=@CXX@
LN_S=@LN_S@
MKDIR=@MKDIR_P@
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
XGETTEXT=@XGETTEXT@
MSGCAT=@MSGCAT@
WINDRES=@WINDRES@
AR=@AR@
VALGRIND=@VALGRIND@
DLLTOOL=@DLLTOOL@

#---[ Paths ]----------------------------------------------------------------------------

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
includedir=@includedir@
datarootdir=@datarootdir@
localedir=@localedir@
docdir=@docdir@
sysconfdir=/etc

BASEDIR=@BASEDIR@
DLL_LDFLAGS=@DLL_LDFLAGS@

OBJDIR=.obj
OBJDBG=$(OBJDIR)/Debug
OBJRLS=$(OBJDIR)/Release

BINDIR=$(BASEDIR)/.bin
BINDBG=$(BINDIR)/Debug
BINRLS=$(BINDIR)/Release

POTDIR=.pot

#---[ Rules ]----------------------------------------------------------------------------

DEPENDS= \
	Makefile

CFLAGS= \
	@CXXFLAGS@ \
	-Isrc/include \
	-DBUILD_DATE=`date +%Y%m%d` \
	@UDJAT_CFLAGS@ \
	@PUGIXML_CFLAGS@

LDFLAGS=\
	@LDFLAGS@

LIBS= \
	@LIBS@ \
	@UDJAT_LIBS@ \
	@PUGIXML_LIBS@

#---[ Debug Rules ]----------------------------------------------------------------------

$(OBJDBG)/%.o: \
	%.cc \
	$(DEPENDS)

	@echo $< ...
	@$(MKDIR) $(@D)

	@$(CXX) \
		$(CFLAGS) \
		-DDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-Wall -Wextra -fstack-check \
		-DDEBUG=1 \
		-o $@ \
		-c $<

$(OBJDBG)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(@D)
	@$(WINDRES) $< -O coff -o $@

#---[ Release Rules ]--------------------------------------------------------------------

$(OBJRLS)/%.o: \
	%.cc \
	$(DEPENDS)

	@echo $< ...
	@$(MKDIR) $(@D)

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-o $@ \
		-c $<

$(OBJRLS)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(@D)
	@$(WINDRES) $< -O coff -o $@

$(POTDIR)/%.pot: \
	%.cc

	@echo $(notdir $@) ...
	@$(MKDIR) $(dir $@)
	@$(XGETTEXT) \
		--from-code=UTF-8 \
		--language=C \
		--keyword=_ \
		--keyword=N_ \
		--keyword=MSG_:2 \
		--output=$@ \
		$<
	@touch $@

$(POTDIR)/%.pot: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(dir $@)
	@touch $@

install-%: \
	%/Makefile

	@$(MAKE) -C `dirname $<` DESTDIR=$(DESTDIR) install

#---[ Release Targets ]------------------------------------------------------------------

all: \
	$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@ \
	locale/$(PACKAGE_NAME).pot

Release: \
	$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@

locale/$(PACKAGE_NAME).pot: \
	$(foreach SRC, $(basename $(LIBRARY_SOURCES) $(MODULE_SOURCES)), $(POTDIR)/$(SRC).pot)

	@rm -f $@
	@$(MKDIR) $(dir $@)
	@$(MSGCAT) --sort-output $^ > $@

locale: \
	locale/$(PACKAGE_NAME).pot

$(BINRLS)/$(SONAME): \
	$(foreach SRC, $(basename $(LIBRARY_SOURCES)), $(OBJRLS)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		$(DLL_LDFLAGS) \
		-Wl,-soname,$(@F) \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS)

$(BINRLS)/libudjat$(LIBRARY_NAME).a: \
	$(foreach SRC, $(basename $(LIBRARY_SOURCES)), $(OBJRLS)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(AR) rcs $@ $^

$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@: \
	$(foreach SRC, $(basename $(MODULE_SOURCES)), $(OBJRLS)/$(SRC).o) \
	$(BINRLS)/$(SONAME)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-shared \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS)


#---[ Install Targets ]------------------------------------------------------------------

install: \
	install-@OSNAME@ \
	install-module \
	install-dev \
	install-locale

install-linux: \
	$(BINRLS)/$(SONAME)

	# Install library
	@$(MKDIR) $(DESTDIR)$(libdir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(SONAME) \
		$(DESTDIR)$(libdir)/$(SONAME)
		
install-windows: \
	$(BINRLS)/@SONAME@

	@$(MKDIR) \
		$(DESTDIR)$(bindir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/@SONAME@ \
		$(DESTDIR)$(bindir)/@SONAME@
		
install-module: \
	$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@

	@$(MKDIR) \
		$(DESTDIR)@MODULE_PATH@

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@ \
		$(DESTDIR)@MODULE_PATH@/$(PACKAGE_NAME)@LIBEXT@

install-dev: \
	install-@OSNAME@-dev \
	install-@OSNAME@-static 
	
	@$(MKDIR) \
		$(DESTDIR)$(includedir)/udjat/net

	@$(INSTALL_DATA) \
		src/include/udjat/net/*.h \
		$(DESTDIR)$(includedir)/udjat/net

	@$(MKDIR) \
		$(DESTDIR)$(includedir)/udjat/net/ip

	@$(INSTALL_DATA) \
		src/include/udjat/net/ip/*.h \
		$(DESTDIR)$(includedir)/udjat/net/ip

	@$(MKDIR) \
		$(DESTDIR)$(includedir)/udjat/net/dns

	@$(INSTALL_DATA) \
		src/include/udjat/net/dns/*.h \
		$(DESTDIR)$(includedir)/udjat/net/dns

	@$(MKDIR) \
		$(DESTDIR)$(includedir)/udjat/net/nic

	@$(INSTALL_DATA) \
		src/include/udjat/net/dns/*.h \
		$(DESTDIR)$(includedir)/udjat/net/nic

	@$(MKDIR) \
		$(DESTDIR)$(includedir)/udjat/net/@OSNAME@

	@$(INSTALL_DATA) \
		src/include/udjat/net/@OSNAME@/*.h \
		$(DESTDIR)$(includedir)/udjat/net/@OSNAME@

	# Install PKG-CONFIG files
	@$(MKDIR) \
		$(DESTDIR)$(libdir)/pkgconfig

	@$(INSTALL_DATA) \
		sdk/@OSNAME@/dynamic.pc \
		$(DESTDIR)$(libdir)/pkgconfig/udjat-$(LIBRARY_NAME).pc

	@$(INSTALL_DATA) \
		sdk/@OSNAME@/static.pc \
		$(DESTDIR)$(libdir)/pkgconfig/udjat-$(LIBRARY_NAME)-static.pc

install-linux-static: \
	$(BINRLS)/libudjat$(LIBRARY_NAME).a

	# Install static library
	@$(MKDIR) $(DESTDIR)$(libdir)
	@$(INSTALL_DATA) \
		$(BINRLS)/libudjat$(LIBRARY_NAME).a \
		$(DESTDIR)$(libdir)/libudjat$(LIBRARY_NAME).static.a

install-windows-static: \
	$(BINRLS)/libudjat$(LIBRARY_NAME).a

	@$(MKDIR) \
		$(DESTDIR)$(libdir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/libudjat$(LIBRARY_NAME).a \
		$(DESTDIR)$(libdir)/libudjat$(LIBRARY_NAME).a

install-linux-dev:

	# Install linux SDK
	@$(MKDIR) \
		$(DESTDIR)$(libdir)

	@$(LN_S) \
		$(SONAME) \
		$(DESTDIR)$(libdir)/libudjat$(LIBRARY_NAME).so

install-windows-dev:

	@$(MKDIR) \
		$(DESTDIR)$(libdir)

	@$(DLLTOOL) \
		--input-def $(BINRLS)/udjat$(LIBRARY_NAME).def \
		--dllname @SONAME@ \
		--output-lib $(DESTDIR)$(libdir)/libudjat$(LIBRARY_NAME).dll.a
		
	
#---[ Uninstall Targets ]----------------------------------------------------------------

uninstall: \
	uninstall-@OSNAME@

uninstall-linux:

	@rm -f \
		$(DESTDIR)@MODULE_PATH@/$(PACKAGE_NAME)@LIBEXT@

#---[ Debug Targets ]--------------------------------------------------------------------

Debug: \
	$(BINDBG)/udjat@EXEEXT@

$(BINDBG)/udjat@EXEEXT@: \
	$(BINDBG)/$(PACKAGE_NAME)@LIBEXT@ \
	$(BINDBG)/$(SONAME) \
	$(foreach SRC, $(basename $(TEST_SOURCES)), $(OBJDBG)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-o $@ \
		$^ \
		-L$(BINDBG) \
		-Wl,-rpath,$(BINDBG) \
		$(LDFLAGS) \
		$(LIBS)


$(BINDBG)/$(SONAME): \
	$(foreach SRC, $(basename $(LIBRARY_SOURCES)), $(OBJDBG)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		$(DLL_LDFLAGS) \
		-Wl,-soname,$(@F) \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS)

$(BINDBG)/$(PACKAGE_NAME)@LIBEXT@: \
	$(foreach SRC, $(basename $(MODULE_SOURCES)), $(OBJDBG)/$(SRC).o) \
	$(BINDBG)/$(SONAME)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-shared \
		-Wl,-rpath,$(BINDBG) \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS)


run: \
	$(BINDBG)/udjat@EXEEXT@

ifeq ($(VALGRIND),no)

	@LD_LIBRARY_PATH=$(BINDBG) \
		$(BINDBG)/udjat@EXEEXT@ -f

else
	@touch valgrind.suppression

	@LD_LIBRARY_PATH=$(BINDBG) \
		$(VALGRIND) --leak-check=full --track-origins=yes --gen-suppressions=all --suppressions=valgrind.suppression \
		$(BINDBG)/udjat@EXEEXT@ -f
endif

#---[ Clean Targets ]--------------------------------------------------------------------

clean: \
	cleanDebug \
	cleanRelease

cleanDebug:

	@rm -fr $(OBJDBG)
	@rm -fr $(BINDBG)

cleanRelease:

	@rm -fr $(OBJRLS)
	@rm -fr $(BINRLS)

clean: \
	cleanDebug \
	cleanRelease

-include $(foreach SRC, $(basename $(LIBRARY_SOURCES) $(MODULE_SOURCES) $(TEST_SOURCES)), $(OBJDBG)/$(SRC).d)
-include $(foreach SRC, $(basename $(LIBRARY_SOURCES) $(MODULE_SOURCES) $(TEST_SOURCES)), $(OBJRLS)/$(SRC).d)


