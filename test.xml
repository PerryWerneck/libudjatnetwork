	<network-host name='srv' ip='192.168.0.11' icmp='true' update-timer='60' icmp-timeout='60'>

		<state name='active' icmp-response='echo-reply' level='ready' summary='Server is active' />
		<state name='unreachable' icmp-response='destination-unreachable' level='error' summary='Server is not reachable' />
		<state name='time-exceeded' icmp-response='time-exceeded' level='error' summary='Server is not available' />
		<state name='timeout' icmp-response='timeout' level='error' summary='Server is not available' />
	
